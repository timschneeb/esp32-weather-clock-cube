<component>
	<api>
		<prop name="title" type="string" default="Screen name" />
	</api>

	<styles>
		<style
			name="main0"
			bg_color="0x2d2d2d"
			border_width="2"
			border_side="bottom"
			border_color="0xa2a2a2"
			radius="0"
			width="100%"
			height="32"
			pad_hor="8"
			layout="flex"
			flex_cross_place="center"
			flex_track_place="center"
			flex_flow="row"
			text_color="0xffffff"
		/>
		<style name="edited" text_color="0x0099ee" />
	</styles>

	<view scrollable="false">
		<style name="main0" />
		<subtitle text="$title" flex_grow="1" />

		<row width="40" style_flex_main_place="end" style_text_color="0xffffff" style_pad_column="0">
			<subtitle bind_text="hours" />

			<subtitle text=":" />

			<subtitle bind_text="mins" />
		</row>
	</view>
</component>
